params {

	readDir = "sample"
	resultsDir = "results"
	library = "library.txt"
	forward_stranded = true
	barcode_random_length = 6
	barcode_demux_mismatches = 1
	barcode_demux_length = 4
	spacer_length = 20

}

process {
	cpus = 1
}

profiles {

    standard {
        process.executor = 'local'
    }

	singularity_local {
		singularity.enabled = true
		process.executor = 'local'
		process.container = 'crispr-nf.img'
		// process.container = 'zuberlab/crispr-nf:latest'
	}

	docker_local {
		docker.enabled = true
		process.executor = 'local'
		process.container = 'zuberlab/crispr-nf:latest'
	}

    cluster_sge {
        process.executor = 'sge'
        process.penv = 'smp'
        process.queue = 'public.q'
        process.memory = '10GB'
    }
}
